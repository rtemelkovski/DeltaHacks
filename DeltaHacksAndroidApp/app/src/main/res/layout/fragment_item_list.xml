<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/R.id.Reminder_List_Entry"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roberto.deltahacksandroidapp.ProfileFragment"
    >
    <TextView
        android:id="@+id/Reminder_List_Entry_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:text="@string/Reminder_List_Entry_Title"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/Reminder_List_Entry_Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reminder_List_Entry_Details"
        />
</LinearLayout>